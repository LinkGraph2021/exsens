<section class="{% unless section.settings.wide_display %}container {% endunless %} wide_display--{{ section.settings.wide_display }}">
    <div class="banner-section">
      <div class="banner-section__image">
        {% if section.settings.link != blank %}
          <a href="{{ section.settings.link }}">
        {% endif %}
        {% if section.settings.image != nil %}
          {% include 'image-element', image: section.settings.image, alt: section.settings.image.alt, stretch_width: true %}
        {% else %}
          {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg placeholder-svg--banner' }}
        {% endif %}

        {% if section.settings.link != blank %}
          </a>
        {% endif %}
        {% if section.settings.image != blank or section.settings.title != blank or section.settings.text != blank or section.settings.button_label != blank %}
          <div class="banner-section__caption">
            <div class="container">
              <div class="columns {% if section.settings.text_position == 'left' %} nine offset-by-one {% elsif section.settings.text_position == 'right' %} eight offset-by-seven {% else %} ten offset-by-three {% endif %} align_{{ section.settings.text_align }}">
                {% if section.settings.title != blank %}
                  <h2 class="banner-section__caption-headline headline">
                    {{ section.settings.title | escape }}
                  </h2>
                {% endif %}
                {% if section.settings.text != blank %}
                  <div class="banner-section__caption-subtitle subtitle">
                    {{ section.settings.text }}
                  </div>
                {% endif %}
                {% if section.settings.button_label != blank %}
                  <a {% if section.settings.link != blank %}href="{{ section.settings.link }}"{% endif %} class="action_button {% if settings.button_style == 'outline' %}action_button--has-outline{% elsif settings.button_style == 'solid' %}action_button--is-solid{% endif %}
                {% if settings.shop_button_style == 'rounded' or settings.shop_button_style == 'bevel' %}action_button--is-rounded{% endif %}
                {% if settings.slideshow_shadow %}action_button--has-text-shadow{% endif %}
                {% if settings.shop_button_style == 'bevel' %}action_button--is-bevel{% endif %}">
                    {{ section.settings.button_label | escape }}
                  </a>
                {% endif %}
              </div>
            </div>
          </div>
        {% endif %}
      </div>
    </div>
</section>

{% schema %}
  {
    "name": "Image with text overlay",
    "class": "image-with-text-overlay-section",
    "settings": [
      {
        "type": "checkbox",
        "id": "wide_display",
        "default": true,
        "label": "Wide display"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image",
        "info": "1800 x 1000px recommended"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Your headline here"
      },
      {
        "type": "richtext",
        "id": "text",
        "label": "Text",
        "default": "<p>This is a short subheading for your banner image</p>"
      },
      {
        "type": "text",
        "id": "button_label",
        "label": "Button label"
      },
      {
        "type": "url",
        "id": "link",
        "label": "Link"
      },
      {
        "type": "select",
        "id": "text_position",
        "label": "Text position",
        "options": [
          {
            "value": "left",
            "label": "Left"
          },
          {
            "value": "center",
            "label": "Center"
          },
          {
            "value": "right",
            "label": "Right"
          }
        ],
        "default": "center"
      },
      {
        "type": "select",
        "id": "text_align",
        "label": "Text alignment",
        "default": "center",
        "options": [
          {
            "value": "left",
            "label": "Left"
          },
          {
            "value": "center",
            "label": "Center"
          },
          {
            "value": "right",
            "label": "Right"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Image with text overlay",
        "category": "Image",
        "settings": {
          "text_position": "center",
          "text_align": "center"
        }
      }
    ]
  }
{% endschema %}
